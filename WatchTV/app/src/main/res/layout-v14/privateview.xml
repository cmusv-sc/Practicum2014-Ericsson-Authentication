<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context=".MainActivity" >

    <GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <EditText
            android:id="@+id/text"
            android:layout_column="1"
            android:fontFamily="Arabic"
            android:textSize="25dip"/>

        <TextView
            android:text="Recently Watched"
            android:layout_row="2"
            android:layout_column="1"
            android:fontFamily="Arabic"
            android:textSize="25dip"/>
        <VideoView
            android:id="@+id/myVideo1"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_column="1"
            android:layout_row="3"/>
        <Button
            android:id="@+id/button1"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_column="1"
            android:text="Play"
            android:layout_row="3"/>

        <VideoView
            android:id="@+id/myVideo2"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_column="2"
            android:layout_row="3"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_column="2"
            android:text="Play"
            android:layout_row="3"/>

        <TextView
            android:text="Your Favourite"
            android:layout_column="1"
            android:layout_row="4"
            android:fontFamily="Arabic"
            android:textSize="25dip"/>
        <VideoView
            android:id="@+id/myVideo3"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_column="1"
            android:layout_row="5"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_column="1"
            android:text="Play"
            android:layout_row="5"/>

        <VideoView
            android:id="@+id/myVideo4"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_column="2"
            android:layout_row="5" />
        <Button
            android:id="@+id/button4"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_column="2"
            android:layout_row="5"
            android:text="Play"
            android:onClick="onClick"/>

        <TextView
            android:text="Buy for $5"
            android:layout_column="1"
            android:layout_row="6"
            android:textSize="25dip"/>
        <VideoView
            android:id="@+id/myVideo5"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_column="1"
            android:layout_row="7" />
        <Button
            android:id="@+id/button5"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_column="1"
            android:layout_row="7"
            android:text="Play"
            android:onClick="onClick"/>

        <VideoView
            android:id="@+id/myVideo6"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_column="2"
            android:layout_row="7" />
        <Button
            android:id="@+id/button6"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_column="2"
            android:layout_row="7"
            android:text="Play"
            android:onClick="onClick"/>
        <TextView
            android:text= "Buy for $10"
            android:layout_column="1"
            android:layout_row="8"
            android:textSize="25dip"/>
        <VideoView
            android:id="@+id/myVideo7"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_column="1"
            android:layout_row="9" />
        <Button
            android:id="@+id/button7"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_column="1"
            android:layout_row="9"
            android:text="Play"
            android:onClick="onClick"/>

        <VideoView
            android:id="@+id/myVideo8"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_column="2"
            android:layout_row="9" />
        <Button
            android:id="@+id/button8"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:layout_column="2"
            android:text="Play"
            android:layout_row="9"/>

    </GridLayout>


</RelativeLayout>